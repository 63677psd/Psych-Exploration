block title
	- const title = "Title"

block nav_info
	- const current_page = "";
	- const prev_page = null;
	- const next_page = null;

doctype html
html
	head
		meta(charset="utf-8")
		meta(name="viewport", content="width=device-width, initial-scale=1")

		link(href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css", rel="stylesheet")
		script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js")
		link(rel="stylesheet", href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.5.0/font/bootstrap-icons.css")

		style(type="text/css").
			html {
				height: 100%;
				overflow-x: hidden;
			}
			.bg-color {
				background: #7CB9E8;
			}
			.btn-toolbar {
				height: 20px;
			}


		script(src="https://code.jquery.com/jquery-3.6.0.min.js")
		script(src="https://cdnjs.cloudflare.com/ajax/libs/p5.js/1.4.0/p5.min.js")

		link(href="https://cdnjs.cloudflare.com/ajax/libs/highlight.js/11.4.0/styles/default.min.css", rel="stylesheet")
		script(src="https://cdnjs.cloudflare.com/ajax/libs/highlight.js/11.4.0/highlight.min.js")

		script(src="https://polyfill.io/v3/polyfill.min.js?features=es6")
		script#MathJax-script(async=true src="https://cdn.jsdelivr.net/npm/mathjax@3/es5/tex-mml-chtml.js")

		block load_scripts
		
		title Psych Exploration

	body
		.container-fluid.d-flex.flex-column(style="min-height:100vh")
			.row.bg-color.p-5.text-center
				h1= title

			.row
				.col.px-0
					nav.navbar.navbar-expand-md.bg-dark.navbar-dark
						.container-fluid.px-2
							ul.navbar-nav
								each info, page in navbar_info
									if info.hasOwnProperty("href")
										li.nav-item
											if current_page == page
												a.nav-link.active(href=info.href)= page
											else
												a.nav-link(href=info.href)= page
									else
										li.navitem.dropdown
											if current_page == page
												a.nav-link.dropdown-toggle.active(href="#", role="button", data-bs-toggle="dropdown")= page
											else
												a.nav-link.dropdown-toggle(href="#", role="button", data-bs-toggle="dropdown")= page
											ul.dropdown-menu
												each subinfo, subpage in info
													li
														a.dropdown-item(href=subinfo.href)= subpage
			.row.p-0
				.col.p-0
					block content

			.row.align-items-end.flex-fill
				.col
					.row.mt-3
						.col-3.text-center
							if prev_page
								a.btn.btn-outline-primary.rounded-pill.py-1.px-3(href=prev_page.link)
									i.bi.bi-caret-left-fill
									span= prev_page.name
								
						.col-6
						.col-3.text-center
							if next_page
								a.btn.btn-outline-primary.rounded-pill.py-1.px-3(href=next_page.link)
									span= next_page.name
									i.bi.bi-caret-right-fill

					.row.mt-3
						.col.bg-color.p-3
							span Brady Bhalla, 2022