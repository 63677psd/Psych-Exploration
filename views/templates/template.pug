block title
	- const title = "Title"

block nav_info
	- const current_page = "";
	- const prev_page = null;
	- const next_page = null;

doctype html
html
	head
		meta(charset="utf-8")
		meta(name="viewport", content="width=device-width, initial-scale=1")

		link(href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css", rel="stylesheet")
		script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js")
		link(rel="stylesheet", href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.5.0/font/bootstrap-icons.css")

		style(type="text/css").
			html {
					height: 100%;
			}
			.bg-color {
				background: #7CB9E8;
			}


		script(src="https://code.jquery.com/jquery-3.6.0.min.js")
		script(src="https://cdnjs.cloudflare.com/ajax/libs/p5.js/1.4.0/p5.min.js")

		link(href="https://cdnjs.cloudflare.com/ajax/libs/highlight.js/11.4.0/styles/default.min.css", rel="stylesheet")
		script(src="https://cdnjs.cloudflare.com/ajax/libs/highlight.js/11.4.0/highlight.min.js")

		block load_scripts
		
		title Psych Exploration

	body
		.container-fluid.bg-color.p-5.text-center
			h1= title

		nav.navbar.navbar-expand.bg-dark.navbar-dark
			.container-fluid
				ul.navbar-nav
					each info, page in navbar_info
						if info.hasOwnProperty("href")
							li.nav-item
								if current_page == page
									a.nav-link.active(href=info.href)= page
								else
									a.nav-link(href=info.href)= page
						else
							li.navitem.dropdown
								if current_page == page
									a.nav-link.dropdown-toggle.active(href="#", role="button", data-bs-toggle="dropdown")= page
								else
									a.nav-link.dropdown-toggle(href="#", role="button", data-bs-toggle="dropdown")= page
								ul.dropdown-menu
									each subinfo, subpage in info
										li
											a.dropdown-item(href=subinfo.href)= subpage

		block content

		.container.xxl.w-75.mt-3
			.row
				.col-3
					if prev_page
						a.btn.btn-outline-primary.rounded-pill.py-1.px-3(href=prev_page.link)
							i.bi.bi-caret-left-fill
							span= prev_page.name
						
				.col-6
				.col-3
					if next_page
						a.btn.btn-outline-primary.rounded-pill.py-1.px-3(href=next_page.link)
							span= next_page.name
							i.bi.bi-caret-right-fill

		.container-fluid.bg-color.p-3.mt-3
			span Brady Bhalla, 2022

