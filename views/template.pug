doctype html
html
	head
		meta(charset="utf-8")
		meta(name="viewport", content="width=device-width, initial-scale=1")

		link(href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css", rel="stylesheet")
		script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js")

		style(type="text/css").
			html {
					height: 100%;
			}

		script(src="https://code.jquery.com/jquery-3.6.0.min.js")
		script(src="https://cdnjs.cloudflare.com/ajax/libs/p5.js/1.4.0/p5.min.js")


		block required_scripts
			- const required_scripts = [];

		each s in required_scripts
			script(src="/scripts/"+s)
		
		title Psych Exploration

	body
		block title
			- const title = "Title"
		.container-fluid.bg-primary.p-5.text-center
			h1= title

		- const navbar_info = {Introduction: "#", Page: "#", Page2: "#"};
		block current_page
			- const current_page = "";

		nav.navbar.navbar-expand.bg-dark.navbar-dark
			.container-fluid
				ul.navbar-nav
					each link, page in navbar_info
						li.nav-item
							if current_page == page
								a.nav-link.active(href=link)= page
							else
								a.nav-link(href=link)= page

		.container.mt-3
			block summary
				p Summary

		.container-lg.border.p-3.mt-3
			.row.pb-2
				block instructions
					.col.fw-bold Instructions
			.row
				#sketch.d-flex.justify-content-center

		.container-fluid.bg-primary.p-3.mt-3
			span footer goes here
